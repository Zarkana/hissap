@model IEnumerable<HISSAP1.Models.Site>

@{
  ViewBag.Title = "Index";
}

<h2 class="buddy-header">Index</h2>
<div class="buddy-link">
  @Html.ActionLink("Back to List", "Index")
</div>
<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.SitesContract.ContractName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.SiteName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Status)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Address.AddressLine1)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Address.AddressLine2)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Address.City)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Address.Zip)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.SitesContract.ContractName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.SiteName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Status)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Address.AddressLine1)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Address.AddressLine2)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Address.City)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Address.State)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Address.Zip)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
      </td>
    </tr>
  }

</table>
