@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
  using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
  {
    @Html.AntiForgeryToken()

    <ul class="navbar-section right">
      <li class="login-item">
        <p>@Html.Raw(String.Format("Hello " + User.Identity.GetUserName() + "!"))</p>
        @Html.ActionLink("Manage My Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
      </li>
      <li class="navbar-item"><a class="image-button logout" href="javascript:document.getElementById('logoutForm').submit()"></a></li>
    </ul>
  }
}
else
{
  <ul class="navbar-section right">
    @*<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
    <li class="navbar-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
  </ul>
}
