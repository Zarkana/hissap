@model HISSAP1.Models.SiteModels.InvoiceBudgetModels.SubcontractsItem

@{
  ViewBag.Title = "Create";
}

<h2 class="buddy-header">Add Item</h2>
@using (Html.BeginForm("AddSubcontractsItem", "Budgets", new { returnUrl = Request.Url.AbsoluteUri, id = Url.RequestContext.RouteData.Values["id"] }))
{
  @Html.AntiForgeryToken()
  <div class="form-horizontal">
    <hr />
    <table class="budget-table">
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      <tr>
        <th class="sub-contracts-name">Name</th>
        <th class="amount">Amount</th>
        <th>Services Provided</th>
        <th>Sub-Contracts Number</th>
        <th>Comments</th>
        <th></th>
      </tr>
      <tr>
        <td class="sub-contracts-name">
          @Html.EditorFor(model => model.BusinessIndividualName, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.BusinessIndividualName, "", new { @class = "text-danger" })
        </td>
        <td class="amount">
          @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </td>
        <td class="col-md-10">
          @Html.EditorFor(model => model.ServicesProvided, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.ServicesProvided, "", new { @class = "text-danger" })
        </td>
        <td class="col-md-10">
          @Html.EditorFor(model => model.SubContractNumber, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.SubContractNumber, "", new { @class = "text-danger" })
        </td>
        <td>
          @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
        </td>
        <td><input type="submit" value="Add" class="btn btn-default" /></td>
      </tr>

      @Html.HiddenFor(model => model.ContractualSubcontractsServiceId)

    </table>
  </div>
}



